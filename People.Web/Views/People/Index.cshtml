<div class="row jumbotron">
    <div class="col-md-3">
        <input type="text" id="first-name" placeholder="First Name" class="form-control" />
    </div>
    <div class="col-md-3">
        <input type="text" id="last-name" placeholder="Last Name" class="form-control" />
    </div>
    <div class="col-md-3">
        <input type="text" id="age" placeholder="Age" class="form-control" />
    </div>

    <div class="col-md-3">
        <button class="btn btn-primary btn-block" id="add-person">Add Person</button>
    </div>
</div>

<div class="row">
    <table id="people-table" class="table table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<div class="modal fade edit-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit for <span id="name"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
                <input type="hidden" name="id" />
                <div class="modal-body">
                    <div class="form-group">
                        <label>First Name</label>
                        <input class="form-control" name="firstName" placeholder="First Name" type="text" id="edit_first_name">
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" name="lastName" placeholder="Last Name" class="form-control" id="edit_last_name">
                    </div>
                    <div class="form-group">
                        <label>Age</label>
                        <input type="text" name="age" placeholder="Age" class="form-control" id="edit_age">
                    </div>
                    <input type="hidden" name="id"  id="edit_id">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <input class="btn btn-primary" name="comit" type="submit" value="Save" id="save-button">
                </div>
          
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/people.js"></script>
}